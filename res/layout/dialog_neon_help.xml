<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#AA000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/helpTitle"
        android:text="⚡ Инструкция Interceptor"
        android:textColor="#00FFFF"
        android:textStyle="bold"
        android:textSize="20sp"
        android:shadowColor="#00FFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="15"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

	<TextView
		android:id="@+id/neonInstructionText"
		android:layout_width="wrap_content"
		android:layout_height="252dp"
		android:gravity="start"
		android:letterSpacing="0.05"
		android:lineSpacingExtra="4dp"
		android:padding="16dp"
		android:text="• Введите токен Telegram-бота и ID чата.\n• Все данные шифруются.\n• SMS будут пересылаться в указанный tg-канал.\n• Автор kucingsayabesar (Aydar Gainullin).\n• Version: 0.15, 18.10.2025."
		android:textColor="#00FFFF"
		android:textSize="16sp" />

    <Button
        android:id="@+id/closeButton"
        android:text="Окей"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:backgroundTint="#00FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
