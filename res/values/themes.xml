        <item name="android:colorBackground">#0B0014</item>
        <item name="android:textColor">#D9B3FF</item>
        <item name="colorPrimary">#6C00FF</item>
        <item name="colorSecondary">#9D4EDD</item>
        <item name="android:statusBarColor">#1A002B</item>
        <item name="android:navigationBarColor">#1A002B</item>
